<h1>New Game</h1>

<div class="container">
    <% @grid.each do |letter| %>
    <div class="box">
        <p><%= letter %></p>
    </div>
    <% end %>
</div>

<p>What is the longest letter you can find?</p>

<form action="/score" method="POST" class="form">
  <input type="text" name="answer" id="answer">
  <input type="submit" value="play" id="submit">
  <%= hidden_field_tag 'grid', @grid %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>